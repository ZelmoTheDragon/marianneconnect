<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd"
    logicalFilePath="changelog-franceconnect-1.0">
    
    <changeSet id="MARIANNE_BIRTH_COUNTRY" author="marianne">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="birth_country" />
            </not>
        </preConditions>
        <createTable tableName="birth_country">
            <column name="id" type="long" autoIncrement="true">
                <constraints primaryKey="true" />
            </column>
            <column name="insee_code" type="char(5)">
                <constraints nullable="false" />
            </column>
            <column name="country_name" type="varchar(255)">
                <constraints nullable="false" />
            </column>
        </createTable>
    </changeSet>
    
    <changeSet id="MARIANNE_BIRTH_PLACE" author="marianne">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="birth_place" />
            </not>
        </preConditions>
        <createTable tableName="birth_place">
            <column name="id" type="long" autoIncrement="true">
                <constraints primaryKey="true" />
            </column>
            <column name="insee_code" type="char(5)">
                <constraints nullable="false" />
            </column>
            <column name="postal_code" type="char(5)">
                <constraints nullable="false" />
            </column>
            <column name="town" type="varchar(255)">
            </column>
        </createTable>
    </changeSet>
    
    <changeSet id="MARIANNE_GENDER" author="marianne">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="gender" />
            </not>
        </preConditions>
        <createTable tableName="gender">
            <column name="id" type="long" autoIncrement="true">
                <constraints primaryKey="true" />
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false" />
                <constraints unique="true" />
            </column>
            <column name="description" type="varchar(255)">
            </column>
        </createTable>
    </changeSet>

    
</databaseChangeLog>
